<% layout('layouts/bolierplate') %>
<h1>All Listings</h1>
<!-- <form method="get" action="/listings/new">
    <button>Create New</button>
  </form> -->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <%for(let data of allListings){%>
  <a href="/listings/<%=data._id%> " class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%=data.image.url%>"
        class="card-img-top"
        alt="listings"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=data.title%> <br /></b>
          &#x20B9;<%=data.price.toLocaleString("en-IN")%> / night
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
